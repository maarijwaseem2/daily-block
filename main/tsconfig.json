      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/page.jsx"
, "components/organisms/IllustrationPanel.jsx", "components/organisms/RegistrationForm.jsx", "components/organisms/LoginForm.jsx", "components/organisms/ForgetPasswordForm.jsx", "components/organisms/CreatePasswordForm.jsx", "components/templates/RegistrationActionPanel.jsx", "components/templates/LogInActionPanel.jsx", "components/templates/ForgetPasswordActionPanel.jsx", "components/templates/CongratsActionPanel.jsx", "components/templates/ChangePasswordActionPanel.jsx", "app/Authentication/login/page.jsx"  ],
  "exclude": [
    "node_modules"
  ]
